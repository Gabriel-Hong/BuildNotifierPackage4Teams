<Window x:Class="BuildNotifierPackagesForTeams.UI.ConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teams Build Notifier Configuration" Height="380" Width="500"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enable/Disable Checkbox -->
        <CheckBox Name="EnabledCheckBox" 
                  Content="Enable Teams Build Notifications" 
                  Grid.Row="0" 
                  FontWeight="Bold"
                  IsChecked="True"/>

        <!-- Webhook URL -->
        <Label Content="Teams Webhook URL:" Grid.Row="2" FontWeight="Bold"/>
        <TextBox Name="WebhookUrlTextBox" 
                 Grid.Row="4" 
                 Height="25"
                 VerticalAlignment="Top"
                 ToolTip="Enter your Microsoft Teams channel Incoming Webhook URL"/>

        <!-- Mention User -->
        <Label Content="Mention User (Optional):" Grid.Row="6" FontWeight="Bold"/>
        <TextBox Name="MentionUserTextBox" 
                 Grid.Row="8" 
                 Height="25"
                 VerticalAlignment="Top"
                 ToolTip="Enter the user name to mention. Leave empty for no mention."/>

        <!-- Help Text -->
        <TextBlock Grid.Row="10" 
                   TextWrapping="Wrap" 
                   Foreground="Gray"
                   FontSize="11">
            You can get the URL by setting up Connectors > Incoming Webhook in your Teams channel.
            <LineBreak/>
            Build completion notifications will be automatically sent to the Teams channel.
            <LineBreak/>
            If you specify a user name, they will be mentioned with @ when builds complete.
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="12" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Name="TestButton" 
                    Content="Test" 
                    Width="70" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="TestButton_Click"/>
            <Button Name="OkButton" 
                    Content="OK" 
                    Width="70" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    Width="70" 
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>